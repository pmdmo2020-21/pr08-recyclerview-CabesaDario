<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Los iconos tienen una anchura y altura de @dimen/user_button_min_width -->


    <ImageView
        android:id="@+id/photoUser"
        android:layout_width="256dp"
        android:layout_height="286dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prueba" />

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/user_lblName"
        app:layout_constraintBottom_toTopOf="@+id/lbl_edit_name"
        app:layout_constraintStart_toEndOf="@+id/photoUser"
        app:layout_constraintTop_toBottomOf="@+id/photoUser" />

    <EditText
        android:id="@+id/lbl_edit_name"
        android:layout_width="196dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:ems="18"
        android:hint="@string/user_txtName"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/photoUser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:text="@string/user_lblEmail"
        app:layout_constraintBottom_toTopOf="@+id/lbl_edit_email"
        app:layout_constraintStart_toStartOf="@+id/lbl_edit_email" />

    <ImageView
        android:id="@+id/lbl_icon_phone"
        android:layout_width="@dimen/user_button_min_width"
        android:layout_height="@dimen/user_button_min_width"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_call_24dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_edit_number"
        app:layout_constraintTop_toTopOf="@+id/lbl_edit_number" />

    <TextView
        android:id="@+id/lbl_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/user_lblPhonenumber"
        app:layout_constraintBottom_toTopOf="@+id/lbl_edit_number"
        app:layout_constraintStart_toStartOf="@+id/lbl_edit_number" />

    <ImageView
        android:id="@+id/lbl_icon_email"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_email_24dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_edit_email"
        app:layout_constraintTop_toTopOf="@+id/lbl_edit_email" />

    <EditText
        android:id="@+id/lbl_edit_number"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:hint="@string/user_txtPhonenumber"
        android:imeOptions="actionNext"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/photoUser"
        app:layout_constraintTop_toBottomOf="@+id/lbl_edit_name" />

    <EditText
        android:id="@+id/lbl_edit_email"
        android:layout_width="157dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:hint="@string/user_txtEmail"
        android:imeOptions="actionDone"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/lbl_edit_name"
        app:layout_constraintTop_toTopOf="@+id/lbl_edit_name" />

    <TextView
        android:id="@+id/lbl_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/user_lblAddress"
        app:layout_constraintBottom_toTopOf="@+id/lbl_edit_adress"
        app:layout_constraintStart_toStartOf="@+id/lbl_edit_adress" />

    <ImageView
        android:id="@+id/lbl_icon_adress"
        android:layout_width="@dimen/user_button_min_width"
        android:layout_height="@dimen/user_button_min_width"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_map_24dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_edit_adress"
        app:layout_constraintTop_toTopOf="@+id/lbl_edit_adress" />

    <EditText
        android:id="@+id/lbl_edit_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/user_txtWeb"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/lbl_edit_email"
        app:layout_constraintStart_toEndOf="@+id/lbl_icon_phone"
        app:layout_constraintTop_toTopOf="@+id/lbl_edit_number" />

    <TextView
        android:id="@+id/lbl_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_lblWeb"
        app:layout_constraintBottom_toTopOf="@+id/lbl_edit_url"
        app:layout_constraintStart_toStartOf="@+id/lbl_edit_url" />

    <ImageView
        android:id="@+id/lbl_icon_url"
        android:layout_width="@dimen/user_button_min_width"
        android:layout_height="@dimen/user_button_min_width"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_web_24dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_edit_url"
        app:layout_constraintTop_toTopOf="@+id/lbl_edit_url" />

    <EditText
        android:id="@+id/lbl_edit_adress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:hint="@string/user_txtAddress"
        android:imeOptions="actionNext"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/lbl_edit_url"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_edit_number"
        app:layout_constraintTop_toBottomOf="@+id/lbl_edit_number" />

</androidx.constraintlayout.widget.ConstraintLayout>
